[user]
  name = railsaholic
  email = manoj.mk27@gmail.com

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  br = branch
  ci = commit
  co = checkout
  df = diff
  g = grep -I
  rb = rbranch
  rv = review
  st = status
  f = fetch
  st = status
  conflicts = !git ls-files -u | cut -f 2 | sort -u
  amend = commit --amend --reuse-message=HEAD
  credit = "!f() { git commit --amend --author \"$1 <$2>\" -C HEAD; }; f"

[format]
  #pretty = format:%C(yellow)%h%Creset %Cgreen(%cr) %Cred%d%Creset- %C(blue)%s %C(magenta)[%an]
  pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%cr) %C(bold magenta)[%aN]%Creset

[mergetool]
  prompt = false

[mergetool "mvimdiff"]
  cmd="mvim -c 'Gdiff' $MERGED" # use fugitive.vim for 3-way merge
  keepbackup=false

[merge]
  summary = true
  verbosity = 1
  tool = mvimdiff
  log = true

[apply]
  whitespace = fix

[branch]
  autosetupmerge = true
  autosetuprebase = always

[push]
  # 'git push' will push the current branch to its tracking branch
  # the usual default is to push all branches
  default = tracking

[core]
  autocrlf = false
  editor = vim
  excludesfile = ~/.gitignore
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space
  trustctime = false

[advice]
  statusHints = false

[diff]
  # Git diff will use (i)ndex, (w)ork tree, (c)ommit and (o)bject
  # instead of a/b/c/d as prefixes for patches
  mnemonicprefix = true
  algorithm = patience
  renames = copies

[rerere]
  # Remember my merges
  # http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
  enabled = true

[include]
  path = .gitconfig.user

[help]
  autocorrect = 1

