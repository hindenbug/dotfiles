  name = hindenbug
  email = manoj.mk27@gmail.com
	signingkey = 4C7235F09B79D34D

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green

[color "status"]
  added = yellow bold
  changed = green bold
  untracked = cyan bold

[alias]
  #br = branch
  #cm = commit
  #co = checkout
  g = grep -I
  rb = rbranch
  rv = review
  pr = pull --rebase
  cp = cherry-pick
  conflicts = !git ls-files -u | cut -f 2 | sort -u
  amend = commit -a --amend
  #sync = "!f() { echo Syncing this branch with master && git checkout master && git pull && git checkout â€“ && git rebase master; }; f"
  #credit = "!f() { git commit --amend --author \"$1 <$2>\" -C HEAD; }; f"
  pushf = push --force-with-lease

[format]
  #pretty = format:%C(yellow)%h%Creset %Cgreen(%cr) %Cred%d%Creset- %C(blue)%s %C(magenta)[%an]
  pretty = format:%C(yellow bold)%h%Creset - %C(green bold)[%cr]%Creset - %C(blue)(%aN)%C(red)%d%Creset %s
[mergetool]
  prompt = false

[mergetool "mvimdiff"]
  keepbackup=false

[merge]
  summary = true
  verbosity = 1
  tool = mvimdiff
  log = true

[apply]
  whitespace = fix

[branch]
  autosetupmerge = true
  autosetuprebase = always

[push]
  # 'git push' will push the current branch to its tracking branch
  # the usual default is to push all branches
  default = tracking

[core]
  autocrlf = false
  editor = vim
  excludesfile = /Users/manoj/.gitignore_global
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space
  trustctime = false
  pager ="diff-so-fancy | less --tabs=4 -RFX"

[advice]
  statusHints = false

[diff]
  # Git diff will use (i)ndex, (w)ork tree, (c)ommit and (o)bject
  # instead of a/b/c/d as prefixes for patches
  mnemonicprefix = true
  algorithm = patience
  renames = copies
  compactionHeuristic = true

[rerere]
  # http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
  enabled = true

[include]
  path = .gitconfig.user

[help]
  autocorrect = 1

[credential]
  helper = osxkeychain

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true

[commit]
  gpgsign = true
